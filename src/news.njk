      <script>
        $(document).ready(function() {
          $(".read-more").on("click", function(e) {
            e.preventDefault();
            var cardBody = $(this).closest(".card-body");
            var truncatedContent = cardBody.find(".truncated-content");
            var fullContent = cardBody.find(".full-content");
            var readMoreBtn = $(this);
            
            truncatedContent.toggleClass("d-none");
            fullContent.toggleClass("d-none");
            
            if (truncatedContent.hasClass("d-none")) {
              readMoreBtn.text("Read Less");
            } else {
              readMoreBtn.text("Read More");
            }
          });
        });
      </script>
      
