  <div class="container">
      <h1 class="text-center mt-5">Latest News</h1> <br><br>
      <div class="row">
        {%- for post in collections.post -%}
        <div class="col-md-6">
          <div class="card mb-4">
            <img src="{{ post.data.image }}" alt="{{ post.data.imageAlt }}" class="card-img-top news-image">
            <div class="card-body">
              <h5 class="card-title">{{ post.data.title }}</h5>
              <p>{{ post.data.day}}</p>
              <p class="card-text truncated-content">{{ post.data.descriptionShort}}</p>
              <p class="card-text full-content d-none">{{ post.data.descriptionLarge }}</p> <br>
              <a href="#" class="btn btn2-primary read-more">Read More</a>
            </div>
          </div>
        </div>
        {%- endfor -%}
      </div>
    </div>


    <!-- News End -->
    

